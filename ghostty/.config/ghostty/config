### Fonts and Theme
font-family = "Hack Nerd Font Mono"
font-size = 14
theme = "Tomorrow Night Eighties"

### General
unfocused-split-opacity = 0.3
copy-on-select = clipboard
window-padding-x = 8

### Keybinds
# New Splits
keybind = ctrl+a>minus=new_split:down
keybind = ctrl+a>backslash=new_split:right
keybind = ctrl+a>t=new_tab
keybind = ctrl+a>w=new_window
# Navigate Splits
keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>j=goto_split:bottom
keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>l=goto_split:right
# Zoom
keybind = ctrl+a>z=toggle_split_zoom
# Equalize Splits
keybind = ctrl+a>equal=equalize_splits
